---
interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  lang?: string;
  hreflangs?: Array<{ lang: string; href: string }>;
}

const { 
  title = "Hacker Days - Rural Hackers", 
  description = "Una semana. Un reto real. Un cambio para muchas aldeas. Hacker Days es una iniciativa para prototipar el futuro del rural, en comunidad.",
  lang = "es",
  ogImage = "/images/hacker-days-og.jpg",
  hreflangs = []
} = Astro.props;

// Get current URL path for canonical and Open Graph
const currentUrl = new URL(Astro.request.url);
const canonicalUrl = `https://hackerdays.org${currentUrl.pathname}`;
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- Hreflang tags for multilingual SEO -->
    {hreflangs.map(({ lang: hrefLang, href }) => (
      <link rel="alternate" hreflang={hrefLang} href={href} />
    ))}
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {ogImage && <meta property="og:image" content={`https://hackerdays.org${ogImage}`} />}
    <meta property="og:locale" content={lang === 'es' ? 'es_ES' : lang === 'en' ? 'en_US' : 'gl_ES'} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    {ogImage && <meta property="twitter:image" content={`https://hackerdays.org${ogImage}`} />}
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&family=Caveat:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- AOS Animation Library -->
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    
  </head>
  <body class="bg-white text-gray-800 font-sans">
    <slot />
    
    <script>
      import AOS from 'aos';
      
      // Initialize AOS animation library
      AOS.init({
        duration: 800,
        once: true,
        offset: 100,
      });
    </script>
  </body>
</html>

<style is:global>
  :root {
    --font-space: 'Space Grotesk', system-ui, sans-serif;
    --font-script: 'Caveat', cursive;
  }

  html {
    font-family: var(--font-space);
    scroll-behavior: smooth;
  }
  
  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-space);
    line-height: 1.1;
    font-weight: 500;
    letter-spacing: -0.02em;
  }

  h1 {
    font-size: 4rem;
    line-height: 1;
  }

  h2 {
    font-size: 3rem;
    line-height: 1.1;
  }

  h3 {
    font-size: 2rem;
    line-height: 1.2;
  }
  
  p, li {
    font-family: var(--font-space);
    font-size: 1.125rem;
    line-height: 1.6;
    font-weight: 400;
    letter-spacing: -0.01em;
  }

  .font-script {
    font-family: var(--font-script);
  }

  @media (min-width: 768px) {
    p, li {
      font-size: 1.25rem;
    }
  }
  
  /* Improved focus styles for accessibility */
  :focus-visible {
    outline: 3px solid rgba(97, 103, 255, 0.5);
    outline-offset: 2px;
    border-radius: 2px;
  }
  
  /* Container max width defaults */
  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  @media (min-width: 640px) {
    .container {
      padding: 0 2rem;
    }
  }
  
  /* Smooth scrolling for anchor links */
  html {
    scroll-behavior: smooth;
  }
  
  /* Section spacing */
  section {
    padding: 3rem 0;
  }
  
  @media (min-width: 768px) {
    section {
      padding: 5rem 0;
    }
  }
</style>