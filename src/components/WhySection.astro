---
interface Props {
  content: {
    title: string;
    intro1: string;
    intro2: string;
    story: string;
    storyHighlight: string;
    imageAlt: string;
  };
}

const { content } = Astro.props;
---

<section id="por-que" class="py-16 md:py-24 bg-earth-50">
  <div class="container px-4 md:px-6">
    <div class="max-w-3xl mx-auto text-center mb-12 md:mb-16">
      <h2 
        data-aos="fade-up"
        class="text-3xl md:text-4xl font-bold mb-6 text-earth-900"
      >
        {content.title}
      </h2>
      
      <p 
        data-aos="fade-up" 
        data-aos-delay="100"
        class="text-lg text-earth-800 leading-relaxed mb-4"
      >
        {content.intro1}
      </p>
      
      <p 
        data-aos="fade-up" 
        data-aos-delay="150"
        class="text-lg text-earth-800 leading-relaxed"
      >
        {content.intro2}
      </p>
    </div>
    
    <div 
      data-aos="fade-up" 
      data-aos-delay="200"
      class="bg-white rounded-xl shadow-md overflow-hidden max-w-4xl mx-auto"
    >
      <div class="md:flex">
        <div class="md:flex-shrink-0 md:w-96 p-6">
          <div class="relative w-full h-full flex items-center justify-center">
            <img 
              src="/rosa-olga.jpeg" 
              alt={content.imageAlt} 
              class="w-full h-auto rounded-lg shadow-md"
            />
          </div>
        </div>
        <div class="p-8 flex items-center">
          <p class="text-base md:text-lg text-earth-800 leading-relaxed text-center">
            {content.story} <br/><br/>
            {content.storyHighlight}
          </p>
        </div>
      </div>
    </div>
  </div>
</section>