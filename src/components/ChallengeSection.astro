---
interface Props {
  content: {
    title: string;
    subtitle: string;
    description1: string;
    question: string;
    description2: string;
    highlight: string;
    goals: {
      title: string;
      items: string[];
    };
    imageAlt: string;
    imageCaption: string;
  };
}

const { content } = Astro.props;
---

<section id="reto" class="py-16 md:py-24 bg-gradient-to-b from-white to-primary-50">
  <div class="container px-4 md:px-6">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-12">
      <div class="md:w-1/2" data-aos="fade-right">
        <h2 class="text-3xl md:text-4xl font-bold mb-6 text-earth-900">
          {content.title}
        </h2>
        
        <h3 class="text-xl md:text-2xl font-semibold mb-4 text-primary-700">
          {content.subtitle}
        </h3>
        
        <p class="text-lg text-earth-800 leading-relaxed mb-6">
          {content.description1}
        </p>
        
        <p class="text-lg text-earth-800 leading-relaxed mb-6">
          <strong>{content.question}</strong>
        </p>
        
        <p class="text-lg text-earth-800 leading-relaxed mb-6">
          {content.description2}
        </p>
        
        <div class="bg-primary-100 border-l-4 border-primary-500 p-4 rounded-r-lg mb-8">
          <p class="text-lg text-primary-800 font-medium">
            {content.highlight}
          </p>
        </div>
        
        <h4 class="text-lg font-bold mb-3 text-earth-900">{content.goals.title}</h4>
        <ul class="space-y-2 mb-8">
          {content.goals.items.map((item) => (
            <li class="flex items-start">
              <span class="text-accent-500 mr-2">âœ“</span>
              <span>{item}</span>
            </li>
          ))}
        </ul>
      </div>
      
      <div class="md:w-2/5" data-aos="fade-left">
        <div class="relative rounded-2xl overflow-hidden shadow-xl">
          <img 
            src="/rosa-olga2.jpeg" 
            alt={content.imageAlt} 
            class="w-full h-auto"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-earth-900/70 to-transparent flex items-end">
            <div class="p-6">
              <p class="text-white text-lg font-medium">
                {content.imageCaption}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>