---
interface Props {
  content: {
    title: string;
    items: Array<{
      title: string;
      description: string;
    }>;
    imageAlt: string;
  };
}

const { content } = Astro.props;
---

<section id="logistica" class="py-16 md:py-24 bg-earth-50">
  <div class="container px-4 md:px-6">
    <div class="max-w-4xl mx-auto">
      <h2 
        data-aos="fade-up"
        class="text-3xl md:text-4xl font-bold mb-12 text-earth-900 text-center"
      >
        {content.title}
      </h2>
      
      <div class="grid md:grid-cols-2 gap-8">
        <div 
          data-aos="fade-up"
          data-aos-delay="100"
          class="bg-white rounded-xl p-8 shadow-md flex flex-col justify-center"
        >
          <ul class="space-y-6">
            {content.items.slice(0, 3).map((item, index) => (
              <li class="flex items-start">
                <div class="flex-shrink-0 w-8 h-8 bg-accent-100 rounded-lg flex items-center justify-center mt-1">
                  <div class="w-5 h-5 flex items-center justify-center">
                    <div class="w-3 h-3 bg-accent-500 rounded-full"></div>
                    <div class="absolute w-4 h-px bg-accent-500 -rotate-45"></div>
                  </div>
                </div>
                <div class="ml-4">
                  <p class="text-earth-800 font-medium">{item.title}</p>
                  <p class="text-earth-600 text-sm mt-1">{item.description}</p>
                </div>
              </li>
            ))}
          </ul>
        </div>
        
        <div 
          data-aos="fade-up"
          data-aos-delay="200"
          class="bg-white rounded-xl p-8 shadow-md flex flex-col justify-center"
        >
          <div class="space-y-6">
            {content.items.slice(3).map((item, index) => (
              <div class="flex items-start">
                <div class="flex-shrink-0 w-8 h-8 bg-earth-100 rounded-lg flex items-center justify-center mt-1">
                  <div class="w-6 h-4 relative">
                    <div class="w-full h-2 bg-earth-500 rounded"></div>
                    <div class="w-2 h-2 bg-earth-400 rounded-full absolute -top-1 left-1"></div>
                    <div class="w-2 h-2 bg-earth-400 rounded-full absolute -top-1 right-1"></div>
                  </div>
                </div>
                <div class="ml-4">
                  <p class="text-earth-800 font-medium">{item.title}</p>
                  <p class="text-earth-600 text-sm mt-1">{item.description}</p>
                </div>
              </div>
            ))}
            
            <!-- Simple illustration -->
            <div class="mt-8">
              <div class="relative rounded-lg overflow-hidden">
                <img 
                  src="/mural-agua.jpg" 
                  alt={content.imageAlt} 
                  class="w-full h-auto shadow-md"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>