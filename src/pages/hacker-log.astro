---
import Layout from '../layouts/Layout.astro';
import NavBar from '../components/NavBar.astro';
import HackerLogSection from '../components/HackerLogSection.astro';
import Footer from '../components/Footer.astro';
import { loadTranslations } from '../utils/i18n';

const translations = await loadTranslations('es');
---

<Layout 
  title="Hacker Log - Hacker Days 2025"
  description="Sigue día a día los avances del hackathon sobre gestión del agua en Anceu, Galicia."
>
  <NavBar content={translations.nav} />
  <HackerLogSection content={translations.hackerLog} />
  <Footer content={translations.footer} />
</Layout> 